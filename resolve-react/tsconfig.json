{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018","dom"],
    "rootDir": "src",
    "outDir": "lib",
    "strict": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
